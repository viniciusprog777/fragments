<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/console_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ps4_formatado"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/console_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PlayStation 4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:textSize="32dp"/>
        <ImageView
            android:id="@+id/console_maker"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/console_name"
            app:layout_constraintStart_toStartOf="@+id/console_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/sony"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/console_image"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/console_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Teste02"
                android:gravity="center"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/console_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Teste03"
                android:gravity="center"
                android:textSize="30dp"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>